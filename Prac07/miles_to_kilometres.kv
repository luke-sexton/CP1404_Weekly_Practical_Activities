BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_up_or_down(1)
            Button:
                text: 'Down'
                on_press: app.handle_up_or_down(-1)
    Button:
        text: 'Convert m to km'
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)



